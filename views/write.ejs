<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enjoy writing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>
<style>
    
    .my-nav{
        background-color: rgba(255,255,255,0.2);
        /* position: fi; */
    }
    body {
    position: relative;
}

.my-nav {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1000; /* Optional: Adjust the z-index to ensure the navigation bar appears above other content */
    background-color: rgba(255,255,255,0.85); /* Optional: Add a background color for better visibility */
}
    .options{
        width: 100%;
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }
    .ips{
        margin-top: 200px;
        /* position: relative; */
        display: flex;
        flex-direction: column;
    }
    .ips div{
        margin-top: 20px;
        
    }
    .ips div input{
        min-height: 50px;
    }
    
    .sb-btn{
        align-self: center;
        /* justify-self: flex-end; */
        display: flex;
        margin: 20px;
        padding: 8px 60px;
        font-size: 20px;
    }
    
    
</style>
<body class="container">
    <div class="container my-nav">
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
          <!-- <div class="col-md-3 mb-2 mb-md-0">
            <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
              <svg class="bi" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
            </a>
          </div> -->
    
          <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
            <li><a href="#" class="nav-link px-2 link-secondary">Home</a></li>
            <li><a href="#" class="nav-link px-2">Features</a></li>
            <li><a href="#" class="nav-link px-2">Pricing</a></li>
            <li><a href="#" class="nav-link px-2">FAQs</a></li>
            <li><a href="#" class="nav-link px-2">About</a></li>
          </ul>
    
          <div class="col-md-3 text-end">
            <button type="button" class="btn btn-outline-primary me-2">Login</button>
            <button type="button" class="btn btn-primary">Sign-up</button>
          </div>
        </header>
        
        <div>
            <h3 class="display-5 fw-bold text-body-emphasis">"Write What's On Your Mind"</h3>
            <br>
            <div class="options">
                <button id="head" class="btn btn-outline-dark"><i class="fa-solid fa-plus"></i> Heading</button>
                <button id="subhead" class="btn btn-outline-dark"><i class="fa-solid fa-plus"></i> Sub heading</button>
                <button id="para" class="btn btn-outline-dark"><i class="fa-solid fa-plus"></i> New paragraph</button>
                <button id="link" class="btn btn-outline-dark"><i class="fa-solid fa-plus"></i> Link</button>
                <button id="img" class="btn btn-outline-dark"><i class="fa-solid fa-plus"></i> Image</button>
                
            </div>
        </div>
    </div>
    

    <form class="container ips"  action="" method="POST" >
        <div id="inputs">
            <div class="input-group " >
                <span class="input-group-text" id="inputGroup-sizing-default">Title</span>
                <input type="text" name="title" placeholder="Blog title" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>
            <div class="input-group">
                <span class="input-group-text">Description</span>
                <textarea name="description" placeholder="simple description of your blog" class="form-control" aria-label="With textarea"></textarea>
            </div>
            <div class="input-group">
                <span class="input-group-text" id="basic-addon1">Author</span>
                <input name="author" type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            
        </div>
        
        <button class="sb-btn btn btn-success" type="submit">Submit</button>
    </form>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        var headcount = 0;
        var subcount = 0;
        var paracount = 0;
        var linkcount = 0;
        var imagecount = 0;

        $("#head").click(()=>{
            $("#inputs").append(
        `<div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Heading</span>
            <input type="text" name='h-${headcount++}' class="form-control" placeholder="Heading" aria-label="Username" aria-describedby="basic-addon1">
            <button class="btn btn-danger dlt" ><i class="fa-solid fa-trash"></i></button>
        </div>`);
        })

        $("#para").click(()=>{
            $("#inputs").append(
        `<div class="input-group ">
            <span class="input-group-text">Paragraph</span>
            <textarea name='para-${paracount++}' class="form-control" placeholder="content" aria-label="With textarea"></textarea>
            <button class="btn btn-danger dlt" ><i class="fa-solid fa-trash"></i></button>
        </div>`);
        });

        $("#subhead").click(()=>{
            $("#inputs").append(
        `
        <div class="input-group mb-3 ">
            <span class="input-group-text" id="basic-addon1">Subheading</span>
            <input name='sb-${subcount++}' type="text" class="form-control" placeholder="Subheading" aria-label="Username" aria-describedby="basic-addon1">
            <button class="btn btn-danger dlt" ><i class="fa-solid fa-trash"></i></button>
        </div>
        `);
        })

        $("#img").click(()=>{
            $("#inputs").append(
        `
        <div class="input-group mb-3">
            <input type="file" name="img-${imagecount++}" accept=".jpg,.jpeg,.png,.gif"  class="form-control" id="inputGroupFile03" aria-describedby="inputGroupFileAddon03" aria-label="Upload">
        </div>
        `);
        })


        // Event delegation to handle click events on dynamically added .dlt buttons
        $('#inputs').on('click', '.dlt', function() {
            // Remove the parent element of the clicked button
            $(this).closest('.input-group').remove();
        });

        
        

        

    </script>
</body>
</html>